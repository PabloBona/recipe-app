<div class="container mt-5">
  <div class="justify-content-center row text-center">
    <div class="col-6">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup needs-validation" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-3", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: "Name" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
        </div>

        <div class="form-group my-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "border btn btn-light w-100" %>
        </div>
      <% end %>

      <%= link_to "Log in", new_user_session_path %> |
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
