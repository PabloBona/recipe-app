<div class="container mt-5">
  <div class="justify-content-center row text-center">
    <div class="col-6">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
 
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="mb-3">
          <%= f.submit "Send me reset password instructions", class: "border btn btn-light w-100" %>
        </div>
      <% end %>

      <%= link_to "Log in", new_user_session_path %> |
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
